@model IEnumerable<SimpleStockTracker.Models.Account>

@{
    ViewData["Title"] = "Accounts";
}

<h1>@ViewData["Title"]</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContributionLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OpeningDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountHolder)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContributionLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpeningDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountHolder)
                    </td>
                    <td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-warning">Edit</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-secondary">Details</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>